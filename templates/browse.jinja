<html>
<head>
    <title>{{ srn }} Browse</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen flex items-center justify-center">
<div class="container mx-auto p-6 bg-white rounded-lg shadow-lg">
    <h1 class="text-2xl font-bold mb-6 text-center">Product List</h1>
    <table class="table-auto w-full border-collapse border border-gray-200">
        <thead class="bg-gray-200">
        <tr class="border border-gray-300 text-left">
            <th class="px-4 py-2">Name</th>
            <th class="px-4 py-2">Description</th>
            <th class="px-4 py-2">Quantity</th>
        </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr class="hover:bg-gray-100 border border-gray-300">
                <td class="px-4 py-2">
                    <a href="/product/{{ item.id }}" class="text-blue-600 hover:underline">{{ item.name }}</a>
                </td>
                <td class="px-4 py-2">{{ item.description }}</td>
                <td class="px-4 py-2">{{ item.qty }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <button class="mt-4 bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600" id="loadMore">
        Load More
    </button>
</div>
</body>
</html>
